---
import Background from "../assets/backgrounds/grey_background.png"
---
<div class="footer">
  <slot/>
  <footer>
    footer
  </footer>
  <figure class="footer__background">
    <img src={Background} alt="">
  </figure>
</div>

<style>
  .footer__background{
    height: 100%;
    width: 100%;
    position: absolute;
    left:0;
    top:0;
    z-index: -1;
  }
  .footer__background img{
    height: 100%;
    width: 100%;
    object-fit: cover;
  }
  .footer{
    position: relative;
    padding-top: 140px;
  }
  @media(max-width:809px){
    .footer{
      padding-top: 100px;
    }
  }
</style>